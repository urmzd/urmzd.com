---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  tags?: string[];
}

const { title, description, image, type = 'website', publishedTime, tags = [] } = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://urmzd.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();

// Generate OG image URL from slug if not provided
// For blog posts (/blog/slug/), we want /og/slug.png
// For index (/), we want /og/index.png
function getOgImagePath(pathname: string): string {
  if (pathname === '/' || pathname === '') {
    return '/og/index.png';
  }
  // Extract the last meaningful segment (e.g., /blog/welcome/ -> welcome)
  const segments = pathname.split('/').filter(Boolean);
  const slug = segments[segments.length - 1];
  return `/og/${slug}.png`;
}

const ogImageUrl = image
  ? new URL(image, siteUrl).toString()
  : `${siteUrl}${getOgImagePath(Astro.url.pathname)}`;
---

<!-- Canonical URL -->
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:type" content={type} />
<meta property="og:site_name" content="urmzd.com" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

<!-- Article-specific meta tags -->
{
  type === 'article' && publishedTime && (
    <meta property="article:published_time" content={publishedTime.toISOString()} />
  )
}
{type === 'article' && tags.map((tag) => <meta property="article:tag" content={tag} />)}
