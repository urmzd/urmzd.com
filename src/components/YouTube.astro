---
import VideoEmbed from './VideoEmbed.astro';

interface Props {
  id?: string;
  url?: string;
  title?: string;
}

const { id, url, title } = Astro.props;
const resolvedUrl = url || (id ? `https://youtube.com/watch?v=${id}` : undefined);

if (!resolvedUrl) {
  throw new Error('YouTube component requires either an id or url prop');
}
---

<VideoEmbed url={resolvedUrl} title={title} />
