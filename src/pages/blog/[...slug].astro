---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import { calculateReadTime } from '@/lib/readTime';
import CodeBlockEnhancer from '@/components/CodeBlockEnhancer';
import HeadingLinkEnhancer from '@/components/HeadingLinkEnhancer';
import ShareButton from '@/components/ShareButton';
import TableOfContents from '@/components/TableOfContents';
import MobileTOC from '@/components/MobileTOC';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);
const readTime = calculateReadTime(post.body || '');

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://urmzd.com';
const postUrl = `${siteUrl}/blog/${post.id}`;

// Filter headings to h2 and h3 only
const tocHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
const showTOC = tocHeadings.length >= 3;
---

<BaseLayout
  title={`${post.data.title} - urmzd`}
  description={post.data.description}
  ogType="article"
  publishedTime={post.data.pubDate}
  tags={post.data.tags}
>
  <article class="container mx-auto px-4 pt-24 pb-16">
    <header class="mb-8">
      <div class="flex items-start justify-between gap-4">
        <h1 class="text-4xl font-bold">{post.data.title}</h1>
        <ShareButton
          client:load
          url={postUrl}
          title={post.data.title}
          description={post.data.description}
        />
      </div>
      <div class="mt-4 flex items-center gap-2 text-muted-foreground">
        <time>
          {
            post.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              timeZone: 'UTC',
            })
          }
        </time>
        <span>|</span>
        <span>{readTime.text}</span>
      </div>
    </header>

    {
      showTOC && (
        <div class="lg:hidden">
          <MobileTOC client:load headings={tocHeadings} />
        </div>
      )
    }

    <div class={showTOC ? 'lg:grid lg:grid-cols-[1fr_250px] lg:gap-8' : ''}>
      <div class="prose prose-neutral dark:prose-invert max-w-none">
        <Content />
      </div>

      {
        showTOC && (
          <aside class="hidden lg:block">
            <TableOfContents client:load headings={tocHeadings} />
          </aside>
        )
      }
    </div>
  </article>
  <CodeBlockEnhancer client:idle />
  <HeadingLinkEnhancer client:load />
</BaseLayout>
